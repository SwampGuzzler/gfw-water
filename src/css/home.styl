@require 'config'

#headerGfw
  height 34px

.home-slider-container
  height 230px

.home-nav
  transform translate(-50%, 0)
  position absolute
  z-index 5000
  bottom 50px
  left 50%
  & a
    text-decoration none
  & h2
    padding 10px 20px 10px 50px
    text-transform uppercase
    border-radius 50px
    background white
    font-weight 300
    margin 0
  & .gfw-btn
    margin-left 10px
    line-height 40px
    font-weight 500
    height 38px

.home-slider
  position relative
  padding 0
  margin 0
  top 0
  & .inner
    margin 0 auto
    height 100%
    width 100%
  & aside
    background rgba(255, 255, 255, 0.75)
    padding 15px 50px 15px 15px
    position absolute
    display block
    width 100%
    bottom 0
    left 0
    & h2, h3
      text-transform uppercase
      margin 0
    & h2
      display inline-block
      font-weight 400
      line-height 35px
      font-size 35px
    & h3
      font-weight 300
      line-height 15px
      font-size 15px
  & .slick-slide
    background-position center
    background-size cover
    height 230px
    width 100%
    &.slide1
      background-image url('http://www.globalforestwatch.org/assets/backgrounds/home-slider/bg_slide1.png')
    &.slide2
      background-image url('http://gfw.blog.s3.amazonaws.com/Carousel/6800195654_c25cfa30a8_o.jpg')
    &.slide3
      background-image url('http://gfw.blog.s3.amazonaws.com/Carousel/Indonesia%20Fires%20Carousel%20Image.JPG')
  & .slick-dots
    position absolute
    list-style none
    right 20px
    padding 0
    margin 0
    top 20px
    & li
      display inline-block
      padding 5px 10px
      &.slick-active button
        transform scale(2)
        opacity 1
    & button
      transition all 0.5s cubic-bezier(0.445, 0.05, 0.55, 0.95)
      box-shadow 0px 1px 2px rgba(0,0,0,0.25)
      text-indent -10000px
      border-radius 50%
      background white
      cursor pointer
      outline none
      border none
      opacity 0.8
      height 8px
      width 8px
      padding 0
      &:hover
        transform scale(2)
        opacity 1

@media (min-width: 1400px)
  .home-slider .inner
    max-width 1200px
    width 75%

@media (min-width: 850px)
  .home-slider .inner
    max-width 1024px
    width 95%
    & aside
      transform translate(0, -50%)
      background none
      bottom auto
      width auto
      padding 0
      top 50%
      & h2
        background rgba(255, 255, 255, 0.75)
        padding 10px 5px 5px
        line-height 61px
        font-size 61px
      & h3
        background rgba(255, 255, 255, 0.75)
        padding 10px 5px 5px
        line-height 31px
        font-size 31px
  .home-slider-container
    min-height 620px
  .home-slider
    & .slick-slide
      height 620px
    & .slick-dots
      bottom 20px
      top auto
