@require 'config'

$statBlue = #1F98D4
$white = #FFFFFF

$riskPink = #FF6097
$riskYellow = #D2DF2E
$riskBrown = #A79261
$riskOrange = #EA5A00

@require 'modal'

section.report-header
  min-height 100px
  z-index 1


.report-controls
  background $lightGrayHighlight
  margin-top -48px
  min-height 40px
  text-align right
  ul
    display flex
    justify-content flex-end
    align-items center
    li
      list-style-type none
      margin 0 0 0 20px
      cursor pointer
      height 40px
      width 40px
      &:first-child
        margin 0
      svg
        display flex
        width 18px
        height 100%
        fill $darkGray

.report-controls-background
  background $lightGrayHighlight
  margin-top -56px
  min-height 56px

